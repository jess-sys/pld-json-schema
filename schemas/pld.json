{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "JSON Schema definition of PLD (Project Log Document)",
  "type": "object",
  "properties": {
    "config": {
      "$ref": "./config.json"
    },
    "title": {
      "type": "string",
      "description": "Main title on document title page",
      "minLength": 1
    },
    "subTitle": {
      "type": "string",
      "description": "Sub title on document title page"
    },
    "description": {
      "type": "string",
      "description": "Description of document"
    },
    "authors": {
      "type": "array",
      "description": "List of document authors",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "versions": {
      "type": "array",
      "description": "List of document versions",
      "items": {
        "$ref": "./version.json"
      },
      "minItems": 1
    },
    "content": {
      "type": "array",
      "description": "Content of the document",
      "items": {
        "$ref": "./section.json"
      }
    }
  },
  "required": [
    "title",
    "authors",
    "versions",
    "content"
  ]
}
